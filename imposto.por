programa
{
	funcao inicio()
	{
		inteiro preco, imposto
		
		escreva("Qual o preço do produto? ")
		leia(preco)

		imposto = (preco * 40) /100

		escreva("O produto custa ", preco, ", e vc pagara ", imposto, " de imposto.")
		
	}
}
